<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="dv_l10n_pe_sunat_electronic_invoice.cpe_body_print">
            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
            </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
            </t>
            </t>
            <div class="header o_company_#{company.id}_layout factura" t-att-style="report_header_style">
                <div class="row">
                    <div class="col-4">
                        <img t-if="company.logo" class="img-fluid" style="display:block;margin-left:auto;margin-right:auto;" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                    </div>
                    <div class="col-3 empresa" name="company_address" style="text-transform: uppercase;font-size:12px;">
                        <strong>
                            <t t-esc="company.name"/>
                        </strong>
                        <br/>
                        <t t-esc="company.street"/>
                        <br/>
                        <br/>
                        <t t-esc="company.partner_id.l10n_pe_district.name"/>,
                        <t t-esc="company.state_id.name"/>,
                        <t t-esc="company.city"/>
                    </div>
                    <div class="col-5 text-right" >
                        <div class="nro-cpe">
                            <div style="margin: auto; padding-top: 18px;">
                            RUC:
                                <t t-esc="company.vat"/>
                                <br/>
                                <span>
                                    <t t-esc="o.pe_doc_name" />
                                    <br/>
                                </span>
                                <t t-if="o.l10n_latam_document_number" t-esc="o.l10n_latam_document_number"/>
                                <t t-else="" t-esc="o.name"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="article o_report_layout_clean factura" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <t t-set="address">
                    <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                    <div t-if="o.partner_id.vat" class="mt16">
                        <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label" id="inv_tax_id_label"/>
                        <t t-else="">Tax ID</t>:
                        <span t-field="o.partner_id.vat"/>
                    </div>
                </t>
                <t t-set="codigo_transaccion" t-value="o.pe_sunat_transaction51[:2]" />
                <div class="page factura">
                    <h2>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Factura cancelada</span>
                        <span t-if="o.move_type == 'out_invoice' and o.state == 'annul'">Factura anulada</span>
                    </h2>
                    <div id="informations">
                        <div class="text-center" style="width: 100%;">
                            <div style="border: 1px solid #ddd !important; border-radius: 6px; margin: 0 auto; width: 100%;" class="row">
                                <div class="defaulttable cpe-tabla" border="0" style="width: 69%;">
                                    <div class="row" t-if="o.partner_id" >
                                        <div style="width: 90px; font-weight: bold;"> Cliente:</div>
                                        <div class="col-xs-3">
                                            <t t-esc="o.partner_id.name" style="word-wrap: break-word;"/>
                                        </div>
                                    </div>
                                    <div class="row" t-if="o.partner_id.vat">
                                        <div style="width: 90px; font-weight: bold;">
                                            <t t-if="o.partner_id.country_id.code == 'PE'">
                                                <t t-if="o.partner_id.doc_type=='6'" class="col-3"> RUC: </t>
                                                <t t-else="" class="col-3"> DNI: </t>
                                            </t>
                                            <t t-elif="codigo_transaccion !='02'">
                                            VAT:
                                        </t>
                                        </div>
                                        <div class="col-xs-3">
                                            <t t-if="codigo_transaccion !='02'">
                                                <t t-esc="o.partner_id.vat or ''"/>
                                        </t>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div style="width: 90px; font-weight: bold;"> Direccion:</div>
                                        <div class="col-xs-3" style="word-wrap: break-word; width: 69%;">
                                            <t t-esc="o.partner_id.street or ''" style="word-wrap: break-word;"/>
                                        </div>
                                    </div>
                                    <div class="row" t-if="o.partner_id.state_id">
                                        <div style="width: 90px; font-weight: bold;">Ciudad: </div>
                                        <div class="col-xs-3" style="text-transform: uppercase;">
                                            <t t-esc="o.partner_id.l10n_pe_district.name"/>,
                                            <t t-esc="o.partner_id.state_id.name"/>,
                                            <t t-esc="o.partner_id.city_id.name"/>
                                            <t t-if="o.partner_id.country_id.code != 'PE'">
                                                <t t-if="o.partner_id.city_id">
                                                ,
                                            </t>
                                                <t t-esc="o.partner_id.country_id.name"/>
                                        </t>
                                        </div>
                                    </div>
                                </div>
                                <div class="defaulttable cpe-tabla" border="0" style="width: 30%;">
                                    <div class="row" t-if="o.partner_id">
                                        <div style="width: 90px; font-weight: bold;"> Moneda:</div>
                                        <div class="col-xs-3">
                                            <t t-esc="o.currency_id.name"/>
                                        </div>
                                    </div>
                                    <!--<div class="row" t-if="o.partner_id">
                                    <div style="width: 90px; font-weight: bold;"> Tipo:</div>
                                    <div class="col-xs-3"> <t t-esc="o.pe_doc_name"/></div>
                                </div>
                                <div class="row" t-if="o.partner_id">
                                    <div style="width: 90px; font-weight: bold;"> Referencia(s)</div>
                                    <div class="col-xs-3"> <t t-esc="o.name"/></div>
                                </div>-->
                                </div>
                            </div>
                        </div>
                        <br/>
                        <div style="border: 1px solid #ddd !important; border-radius: 6px; width: 100%; margin: 0 auto;">
                            <div class="row" t-if="o.partner_id" style="width: 100%; text-align: center;">
                                <div style="width: 20%;" >
                                Fecha de Emisión
                                    <br/>
                                    <t t-esc="o.invoice_date"/>
                                </div>
                                <div class="linea-h1"/>
                                <div style="width: 20%;">
                                Forma de pago
                                    <br/>
                                    <t t-if="o.tipo_transaccion" t-esc="dict(o.fields_get(allfields=['tipo_transaccion'])['tipo_transaccion']['selection'])[o.tipo_transaccion]"/>
                                    <t t-else="">
                                    Contado
                                </t>
                                </div>
                                <div class="linea-h1"/>
                                <div style="width: 20%;">
                                Orden de compra
                                    <br/>
                                    <t t-esc="o.pe_purchase_request"/>
                                </div>
                                <div class="linea-h1"/>
                                <div style="width: 20%;">
                                Fecha de vencimiento
                                    <br/>
                                    <t t-esc="o.invoice_date_due"/>
                                </div>
                                <div class="linea-h1"/>
                                <div style="width: 20%;">
                                    Guía de Remisión
                                    <br/>
                                    <t t-esc="o.pe_referral_guide"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <div name="invoice_line_table" class="table table-sm o_main_table cpe-tabla" style="border: 1px solid #ddd !important; border-radius: 6px; width: 100%; margin: 0;">
                        <div class="row" t-if="o.partner_id">
                            <div class="cpe-gris" style="width: 15%;"> CÓDIGO </div>
                            <div class="cpe-gris" style="width: 10%;"> CANT. </div>
                            <div class="cpe-gris" style="width: 10%;"> UNID. </div>
                            <div class="cpe-gris" style="width: 35%;"> DESCRIPCIÓN </div>
                            <div class="cpe-gris" style="width: 10%;"> V.UNIT </div>
                            <div class="cpe-gris" style="width: 10%;"> DSCTO. </div>
                            <div class="cpe-gris" style="width: 10%;"> V. VENTA </div>
                        </div>
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, (l.name), -l.id), reverse=True)"/>
                        <div class="invoice_tbody">
                            <t t-foreach="lines" t-as="line">
                                <hr style="width:100%;text-align:left;margin-left:0"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                <div t-if="o.partner_id" t-att-class="'row bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'row font-italic o_line_note' if line.display_type == 'line_note' else 'row'">
                                    <div style="width: 15%; text-align: center;">
                                        <span t-field="line.product_id.product_tmpl_id.default_code"/>
                                    </div>
                                    <div style="width: 10%; text-align: center;">
                                        <span t-field="line.quantity"/>
                                    </div>
                                    <div style="width: 10%; text-align: center;">
                                        <span t-field="line.product_uom_id"/>
                                    </div>
                                    <!--<div style="width: 35%; text-align: left;"> <span t-field="line.nombre_producto" t-options="{'widget': 'text'}"/> </div>-->
                                    <div style="width: 35%; text-align: left;">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                    </div>
                                    <div style="width: 10%; text-align: right;">
                                        <span class="text-nowrap" t-field="line.price_unit"/>
                                    </div>
                                    <div style="width: 10%; text-align: right;">
                                        <span class="text-nowrap" t-field="line.discount"/>
                                    </div>
                                    <div style="width: 10%; text-align: right;">
                                        <span t-field="line.price_total"/>
                                    </div>
                                </div>
                                <div t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')" class="row">
                                    <div style="width: 15%;">  </div>
                                    <div style="width: 10%;">  </div>
                                    <div style="width: 10%;"> </div>
                                    <div style="width: 35%;">  </div>
                                    <div style="width: 10%;"> </div>
                                    <div style="width: 10%;"> </div>
                                    <div style="width: 10%;">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                        t-esc="current_subtotal"
                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                    />
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                    <hr style="width:100%;text-align:left;margin-left:0"/>
                    <div class="row" style="width: 100%; margin: 0;">
                        <div class="col-8">
                        Observaciones
                            <p t-field="o.narration" />
                        </div>
                        <div class="col-4 detalles-precio">
                            <div class="row" style="padding: 1px;">
                                <div class="col-6 cpe-gris"> OP. GRAVADAS </div>
                                <div class="col-6 text-right border-n1">
                                    <span t-field="o.amount_untaxed"/>
                                </div>
                            </div>
                            <t t-set="retenciones" t-value="0"/>
                            <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                            <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                                <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                                <tr style="">
                                    <t t-foreach="tax_totals['groups_by_subtotal'][subtotal_to_show]" t-as="amount_by_group">
                                        <t t-if="len(tax_totals['groups_by_subtotal'][subtotal_to_show]) &gt; 1">
                                            <div class="row" t-if="float(amount_by_group['tax_group_amount']) > 0" style="padding: 1px;">
                                                <div class="col-6 cpe-gris">
                                                    <span class="text-nowrap" t-esc="amount_by_group['tax_group_name']"/>
                                                </div>
                                                <div class="col-6 text-right o_price_total border-n1">
                                                    <span class="text-nowrap" t-esc="amount_by_group['formatted_tax_group_base_amount']" />
                                                </div>
                                            </div>
                                            <t t-set="retenciones" t-value="retenciones - float(amount_by_group['tax_group_amount']) if float(amount_by_group['tax_group_amount']) &lt; 0 else retenciones - 0"/>
                                    </t>
                                        <t t-else="">
                                            <div class="row" t-if="float(amount_by_group['tax_group_amount']) > 0" style="padding: 1px;">
                                                <div class="col-6 cpe-gris">
                                                    <span t-esc="amount_by_group['tax_group_name']"/>
                                                </div>
                                                <div class="col-6 text-right o_price_total border-n1">
                                                    <span class="text-nowrap">
                                                        <t t-esc="amount_by_group['formatted_tax_group_amount']"/>
                                                    </span>
                                                </div>
                                            </div>
                                            <t t-set="retenciones" t-value="retenciones - float(amount_by_group['tax_group_amount']) if float(amount_by_group['tax_group_amount']) &lt; 0 else retenciones - 0"/>
                                    </t>
                                    </t>
                                </tr>
                            </t>
                            <div id="total" class="row" style="padding: 1px;">
                                <div class="col-6 cpe-celeste"> TOTAL</div>
                                <div class="col-6 text-right border-n2">
                                    <t t-esc="o.currency_id.symbol"/>
                                    <span class="text-nowrap" t-esc="'%.2f'%(o.amount_total + retenciones)"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <div  t-if="o.tiene_detraccion and company.cuenta_detraccion and company.cuenta_detraccion.bank_account_id">
                        <div class="row texto-12">
                            <div class="col-3 text-left">
                                <span style="font-weight: bold;" t-esc="company.cuenta_detraccion.name"/>
                            </div>
                            <div class="text-right o_price_total">
                                <span class="text-nowrap">
                                    <t t-esc="company.cuenta_detraccion.bank_account_id.acc_number"/>
                                </span>
                            </div>
                        </div>
                        <div class="row texto-12">
                            <div style="font-weight: bold;" class="col-3 text-left"> Detracción (
                                <t t-esc="o.porc_detraccion"/> %)
                            </div>
                            <div class="text-right">
                                <t t-esc="o.currency_id.symbol"/>
                                <span class="text-nowrap" t-esc="'%.2f'%(o.monto_detraccion_base)"/>
                            </div>
                        </div>
                        <div class="row texto-12">
                            <div style="font-weight: bold;" class="col-3 text-left"> Detracción S/.
                            </div>
                            <div class="text-right">
                                <t t-esc="o.company_id.currency_id.symbol"/>
                                <span class="text-nowrap" t-esc="'%.2f'%(o.monto_detraccion)"/>
                            </div>
                        </div>
                        <div class="row texto-12">
                            <div style="font-weight: bold;" class="col-3 text-left"> Neto a Pagar</div>
                            <div class="text-right">
                                <t t-esc="o.currency_id.symbol"/>
                                <span class="text-nowrap" t-esc="'%.2f'%(o.monto_neto_pagar_base)"/>
                            </div>
                        </div>
                    </div>
                    <div  t-if="o.tiene_retencion">
                        <div class="row texto-12">
                            <div style="font-weight: bold;" class="col-3 text-left"> Retención (
                                <t t-esc="company.por_retencion"/> %)
                            </div>
                            <div class="text-right">
                                <t t-esc="o.currency_id.symbol"/>
                                <span class="text-nowrap" t-esc="'%.2f'%(o.monto_retencion_base)"/>
                            </div>
                        </div>
                        <div class="row texto-12">
                            <div style="font-weight: bold;" class="col-3 text-left"> Neto a Pagar</div>
                            <div class="text-right">
                                <t t-esc="o.currency_id.symbol"/>
                                <span class="text-nowrap" t-esc="'%.2f'%(o.monto_neto_pagar_base)"/>
                            </div>
                        </div>
                    </div>
                    <div style="border: 1px solid #ddd !important; border-radius: 6px; width: 100%;" class="defaulttable numeros-texto">
                     SON:
                        <span t-field="o.amount_text" />
                        <br/>
                        <t t-if="o.tiene_detraccion">
                        OPERACIÓN SUJETA AL SISTEMA DE PAGO DE OBLIGACIONES TRIBUTARIAS CON EL GOBIERNO CENTRAL 12%
                     </t>
                    </div>
                    <br/>
                    <div t-if="o.tipo_transaccion == 'credito' and codigo_transaccion!='02' and o.l10n_pe_edi_is_sale_credit">
                        <table style="border: 1px solid #ddd !important; border-radius: 6px; width: 75%;margin: 0 auto;"  >
                            <thead>
                                <tr>
                                    <td class="cpe-gris">Nº DE CUOTA</td>
                                    <td class="cpe-gris">IMPORTE</td>
                                    <td class="cpe-gris">FECHA DE PAGO</td>
                                </tr>
                            </thead>
                            <tbody style="border: 0px;margin: 0px; padding: 0px;">
                                <t t-foreach="o.l10n_pe_edi_dues_ids" t-as="due_line">
                                    <tr style="margin: 0px; padding: 0px;">
                                        <td class="td-n1" style="border: 0px;margin: 0px; padding: 0px;">
                                            <span t-esc="due_line.dues_number"/>
                                        </td>
                                        <td class="td-n1" style="border: 0px;margin: 0px; padding: 0px;">
                                            <span t-esc="'%.2f'%(due_line.amount)"/>
                                        </td>
                                        <td class="td-n1" style="border: 0px;margin: 0px; padding: 0px;">
                                            <span t-esc="due_line.paid_date"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                    <!--<p t-if="o.invoice_payment_term_id" name="payment_term">
                    <span t-field="o.invoice_payment_term_id.note"/>
                </p>-->
                    <p t-if="o.fiscal_position_id.note" name="note">
                        <span t-field="o.fiscal_position_id.note"/>
                    </p>
                    <div id="qrcode" t-if="(o.company_id.qr_code) and (o.currency_id.name == 'EUR') and (o.invoice_partner_bank_id.acc_number != False)">
                        <p t-if="(o.invoice_partner_bank_id.qr_code_valid)">
                            <strong class="text-center">Scan me with your banking app.</strong>
                            <br />
                            <br />
                            <img class="border border-dark rounded" t-att-src="o.invoice_partner_bank_id.build_qr_code_url(o.amount_residual, o.invoice_payment_ref or o.ref or o.name)"/>
                        </p>
                        <p t-if="(o.invoice_partner_bank_id.qr_code_valid == False)">
                            <strong class="text-center">The SEPA QR Code informations are not set correctly.</strong>
                            <br />
                        </p>
                    </div>
                </div>
                <br/>
                <br/>
                <br/>
                <div class="col-xs-12" t-if="o.is_cpe" style="padding: 2mm">
                    <span t-field="o.pe_cpe_id.digest" style="font-size: 10px;"/>
                    <br/>
                    <img t-if="o.sunat_qr_code" t-att-src="'data:image/png;base64,%s' %to_text(o.sunat_qr_code)" class="img-responsive center-block" style="width: 40mm;  height: 40mm;" />
                </div>
            </div>
            <div class="footer" >
                <br/>
                <div class="text-center" style="border-top: 1px solid black;">
                    <ul class="list-inline mb4">
                        <li t-if="company.phone">Telefono:
                            <span t-field="company.phone"/>
                        </li>
                        <li t-if="company.email">Email:
                            <span t-field="company.email"/>
                        </li>
                        <li t-if="company.website">Web:
                            <span t-field="company.website"/>
                        </li>
                        <!--<li t-if="company.website">
                        Representación impresa de factura electrónica, consulta en <span t-field="company.website"/></li>-->
                    </ul>
                    <div name="financial_infos">
                        <span t-field="company.report_footer"/>
                    </div>
                    <div class="text-muted">
                        <span class="page"/>
                    de
                        <span class="topage"/>
                    </div>
                </div>
                <br/>
            </div>
        </template>
        <template id="dv_l10n_pe_sunat_electronic_invoice.cpe_print" name="dv_l10n_pe_sunat_electronic_invoice.cpe_print">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.invoice_user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t t-call="dv_l10n_pe_sunat_electronic_invoice.cpe_body_print" t-lang="lang"/>
    		</t>
            </t>
        </template>
        <template id="report_invoice_advanced_main_duplicate" inherit_id="dv_l10n_pe_sunat_electronic_invoice.cpe_body_print" primary="True">
            <xpath expr="//div[@id='total']" position="after">
                <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                <t t-foreach="payments_vals" t-as="payment_vals">
                    <tr>
                        <td>
                            <i class="oe_form_field text-right oe_payment_label">Pagado en
                                <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/>
                            </i>
                        </td>
                        <td class="text-right">
                            <span t-esc="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                </t>
                <t t-if="len(payments_vals) > 0">
                    <tr class="border-black">
                        <td>
                            <strong>Monto adeudado</strong>
                        </td>
                        <td class="text-right">
                            <span t-field="o.amount_residual"/>
                        </td>
                    </tr>
                </t>
            </xpath>
        </template>
        <template id="account.report_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.invoice_user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t t-call="dv_l10n_pe_sunat_electronic_invoice.cpe_body_print" t-lang="lang"/>
    		</t>
            </t>
        </template>
        <template id="account.report_invoice_with_payments">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.invoice_user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
