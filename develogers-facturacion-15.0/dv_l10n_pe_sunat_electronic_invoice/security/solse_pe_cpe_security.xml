<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record model="ir.module.category" id="module_dv_l10n_pe_sunat_electronic_invoice">
            <field name="name">Configuracon de comprobantes electronicos</field>
            <field name="description">Configuracon de comprobantes electronicos</field>
            <field name="sequence">20</field>
        </record>
        <record id="group_dv_l10n_pe_sunat_electronic_invoice_user" model="res.groups">
            <field name="name">Usuario</field>
            <field name="category_id" ref="module_dv_l10n_pe_sunat_electronic_invoice"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="group_dv_l10n_pe_sunat_electronic_invoice_accountant" model="res.groups">
            <field name="name">Contador</field>
            <field name="category_id" ref="module_dv_l10n_pe_sunat_electronic_invoice"/>
            <field name="implied_ids" eval="[(4, ref('group_dv_l10n_pe_sunat_electronic_invoice_user'))]"/>
        </record>
        <record id="group_dv_l10n_pe_sunat_electronic_invoice_manager" model="res.groups">
            <field name="name">Administrador</field>
            <field name="category_id" ref="module_dv_l10n_pe_sunat_electronic_invoice"/>
            <field name="implied_ids" eval="[(4, ref('group_dv_l10n_pe_sunat_electronic_invoice_accountant'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>


        <record id="servidores_cpe_rule" model="ir.rule">
            <field name="name">Servidores Facturación electronica</field>
            <field name="model_id" ref="model_cpe_server"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]</field>
        </record>

        <record id="certificados_cpe_rule" model="ir.rule">
            <field name="name">Certificados digital</field>
            <field name="model_id" ref="model_cpe_certificate"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]</field>
        </record>

        <record id="cpe_rule" model="ir.rule">
            <field name="name">Comprobantes electrónicos (xml)</field>
            <field name="model_id" ref="model_solse_cpe"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]</field>
        </record>
</odoo>
