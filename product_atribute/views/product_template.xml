<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="product_template_form" model="ir.ui.view">
        <field name="name">product_template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
           
            <xpath expr="//page[1]" position="after">
                <page string="Detalle">
                    <group>
                       <group>
                            <field name="internal_code"/>
                            <field name="part_number"/>
                            <field name="equivalent_code"/>
                            <field name="ledger_account"/>
                            <field name="isc"/>
                       </group>
                       <group>
                            <field name="item_type" required="1"/>
                            <field name="model"/>
                            <field name="wide"/>
                            <field name="long_id"/>
                            <field name="state" widget="boolean_toggle"/>
                        </group>
                    </group>
                </page>
            </xpath>  
            <xpath expr="//div[@name='button_box']" position="after">
                
				<widget name="web_ribbon" text="Vigente" attrs="{'invisible':[('state', '=', False)]}"/>
				<widget name="web_ribbon" text="Inactivo" bg_color="bg-danger" attrs="{'invisible':[('state', '=', True)]}" />
			         
	        </xpath>
        </field>
    </record>
</odoo>